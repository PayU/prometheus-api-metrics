{
  "name": "prometheus-api-metrics",
  "version": "2.0.1",
  "description": "API and process monitoring with Prometheus for Node.js micro-service",
  "author": "Idan Tovi",
  "scripts": {
    "unit-tests": "nyc mocha \"./test/**/*-test.js\"",
    "test": "npm run unit-tests && npm run integration-tests",
    "integration-tests": "mocha ./test/**/**/*-test.js --require ts-node/register test/integration-tests/nest-js/*.spec.ts",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls"
  },
  "main": "src/metrics-middleware.js",
  "nyc": {
    "report-dir": "./coverage",
    "lines": 95,
    "statements": 95,
    "functions": 100,
    "branches": 90,
    "include": [
      "src"
    ],
    "exclude": [
      "src/index.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "cache": true,
    "all": true
  },
  "dependencies": {
    "debug": "^3.1.0",
    "pkginfo": "^0.4.1"
  },
  "peerDependencies": {
    "prom-client": "11.x"
  },
  "devDependencies": {
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "doctoc": "^1.3.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-mocha": "^5.0.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "express": "^4.16.3",
    "mocha": "^5.2.0",
    "node-mocks-http": "^1.7.0",
    "nyc": "^11.8.0",
    "prom-client": "^11.x",
    "rewire": "^4.0.1",
    "rxjs": "^5.4.2",
    "sinon": "^5.0.10",
    "supertest": "^3.1.0",
    "@nestjs/common": "^4.6.4",
    "@nestjs/core": "^4.6.4",
    "@types/node": "^9.6.1",
    "@types/supertest": "^2.0.5",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.0.0",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.1",
    "reflect-metadata": "0.1.10",
    "@nestjs/testing": "^4.6.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zooz/prometheus-api-metrics.git"
  },
  "keywords": [
    "monitoring",
    "nodejs",
    "node",
    "prometheus",
    "api",
    "express",
    "metrics"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Zooz/prometheus-api-metrics/issues"
  },
  "homepage": "https://github.com/Zooz/prometheus-api-metrics#readme"
}
